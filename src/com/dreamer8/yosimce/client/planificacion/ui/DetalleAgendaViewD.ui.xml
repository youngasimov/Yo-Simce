<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:com.google.gwt.user.cellview.client"
	xmlns:my="urn:import:com.dreamer8.yosimce.client.ui">
	
    <ui:with field='res' type='com.dreamer8.yosimce.client.ui.resources.SimceResources'/>
    
	<ui:style>
	
	.title {
		font-size: 20px;
		margin-left: 10px;
	}
	
	.leftPanel{
		display:block;
		width: 450px;
		margin-left:auto;
		margin-right: auto;
	}
	
	
	.panel{
		display:block;
		width: 100%;
		float:left;
	}

	.agendaPanel{
		display: block;
		margin-top: 50px;
		margin-left:auto;
		margin-right: auto;
	}
	
	.agendaList{
		display: block;
		float: left;
		width: 440px;
	}

	.estName{
		display: inline;
		margin-left: 10px;
	}
	</ui:style>
	<g:DockLayoutPanel unit="PX">
		<g:north size="45">
			<g:MenuBar ui:field="menu"  animationEnabled="true" autoOpen='true' focusOnHoverEnabled='false'>
				<g:MenuItem enabled="false" addStyleNames='{style.title}'>Agenda de</g:MenuItem>
				<g:MenuItem enabled="false" ui:field="cursoItem" />
				<g:MenuItem ui:field="cambiarItem" text='Cambiar'/>
				<g:MenuItem ui:field="informacionItem" text='InformaciÃ³n General' />
			</g:MenuBar>
		</g:north>
		<g:center>
			<g:ScrollPanel>
				<g:HTMLPanel addStyleNames='{style.panel}'>
				    <div class='{style.leftPanel}'>
				    	<g:DecoratorPanel addStyleNames='{style.agendaPanel}'>
				    		<d:CellList ui:field="agendaList" addStyleNames='{style.agendaList}'/>
				    	</g:DecoratorPanel>
				    </div>
				</g:HTMLPanel>
			</g:ScrollPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 