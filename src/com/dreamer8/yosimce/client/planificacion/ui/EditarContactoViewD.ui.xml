<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.button{
			display: inline-block;
			float: right;
			margin: 5px;
		}
	</ui:style>
	<g:HTMLPanel>
	    
	    <table>
	        <tr>
	            <th colspan='2'>Editar contacto</th> 
	        </tr>
	        <tr>
	            <td>Nombre:</td>
	            <td> <g:TextBox ui:field='nombreBox' /> </td>
	        </tr>
	        <tr>
	            <td>Tel√©fono:</td>
	            <td> <g:TextBox ui:field='fonoBox' /> </td>
	        </tr>
	        <tr>
	            <td>Email:</td>
	            <td> <g:TextBox ui:field='emailBox' /> </td>
	        </tr>
	        <tr>
	            <td>Cargo:</td>
	            <td> <g:ListBox ui:field='cargoBox' /> </td>
	        </tr>
	        <tr>
	            <td colspan='2'> <g:Button addStyleNames='{style.button}' text="Editar" ui:field='editarButton' /> <g:Button addStyleNames='{style.button}' text="Cancelar" ui:field='cancelarButton' /></td>
	        </tr>
	    </table>
	    
	</g:HTMLPanel>
</ui:UiBinder>