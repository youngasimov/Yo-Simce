<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">
    
    <ui:with field='date' type='java.lang.String'/>
    <ui:with field='estado' type='java.lang.String'/>
    <ui:with field='nombre' type='java.lang.String'/>
    <ui:with field='comentario' type='java.lang.String'/>
    
	<ui:style>
	.item{
		border-bottom: 1px solid black;
		width: 100%;
	}
	.date {
		font-weight: bolder;
		font-size: 15px;
		padding-left: 5px;
		padding-right: 5px;
		padding-bottom: 5px;
		padding-top: 20px;
		width: 160px;
	}
	.estado {
		font-weight: bold;
		font-size: 13px;
		padding-left: 5px;
		padding-right: 5px;
		padding-bottom: 5px;
		padding-top: 20px;
		text-align: center;
	}
	.name {
		font-weight: lighter;
		font-size: 10px;
		font-style: oblique;
		padding-left: 20px;
		padding-right: 2px;
		padding-top: 2px;
		padding-bottom: 2px;
		width: 160px;
		text-align: right;
	}
	.comment {
		font-weight: normal;
		font-size: 10px;
		padding-left: 2px;
		padding-right: 2px;
		padding-top: 2px;
		padding-bottom: 2px;
	}
	</ui:style>
	<table class='{style.item}'>
	    <tr>
	        <td class='{style.date}'><ui:text from='{date}'/></td>
	        <td class='{style.estado}'><ui:text from='{estado}'/></td>
	    </tr>
	    <tr>
	        <td class='{style.name}'><ui:text from='{nombre}'/></td>
	        <td class='{style.comment}'><ui:text from='{comentario}'/></td>
	    </tr>
	</table>
</ui:UiBinder>