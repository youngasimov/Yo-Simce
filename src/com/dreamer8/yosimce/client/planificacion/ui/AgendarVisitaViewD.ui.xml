<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:d="urn:import:com.google.gwt.user.cellview.client"
	xmlns:e="urn:import:com.dreamer8.yosimce.client.ui.eureka"
	xmlns:my="urn:import:com.dreamer8.yosimce.client.ui">
	
    <ui:with field='res' type='com.dreamer8.yosimce.client.ui.resources.SimceResources'/>
    
	<ui:style>
	.header{
		display:inline-block;
		float: left;
		position: absolute;
		top: 0px;
		left: 0px;
		padding-left: 10px;
		min-width: 800px;
	}
	
	.content{
		display:block;
		float: left;
		width: 100%;
		height: 100%;
		position:absolute;
		top: 50px;
		bottom: 0px;
		left: 0px;
	}
	
	.scroll{
		width: 100%;
		height: 98%;
		border-bottom: 1px solid black;
	}
	
	.title {
		display:inline-block;
		position: relative;
		height: 50px;
		float: left;
		font-size: 26px;
	}
	.actions{
		display:inline-block;
		position: relative;
		height: 50px;
		float: left;
		margin-left: 10px;
	}
	
	.action{
		margin: 5px;
	}
	
	.leftPanel{
		display:block;
		float: left;
		width: 400px;
		height: 100%;
	}
	
	.rightPanel{
		display:block;
		float: left;
		width: 450px;
		height: 100%;
	}
	
	.panel{
		display:block;
		width: 300px;
		margin-left:auto;
		margin-right: auto;
		margin-top: 50px;
	}
	
	.form{
		width: 300px;
		text-align: center;
	}
	
	.form .label{
		font-size: 15px;
		font-weight: bold;
	}
	
	.form .separador td{
		padding-top: 30px;
		border-bottom: 1px solid black;
	}
	
	.agendaPanel{
		display: block;
		margin-top: 10px;
		margin-left:auto;
		margin-right: auto;
	}
	
	.agendaList{
		display: block;
		float: left;
		width: 440px;
	}
	
	.estName{
		display: inline;
		margin-left: 10px;
	}
	.timepicker{
		display: block;
		width: 80px;
		height: 20px;
		float: left;
	}
	
	.fechaPicker table{
		text-align: center;
		width: 300px;
	}
	
	.panelContacto{
		display: block;
		margin-top: 10px;
		margin-left:auto;
		margin-right: auto;
	}
	
	.tablaContacto{
		width: 440px;
		float: left;
	}
	
	</ui:style>
	<g:DockLayoutPanel unit="EM">
		<g:north size="4">
			<g:ScrollPanel addStyleNames='{style.scroll}'>
			<g:HTMLPanel addStyleNames='{style.header}'>
				<div class='{style.title}'>Agenda de </div>
				<div class='{style.actions}'>
					<g:HTML addStyleNames='{style.estName}' ui:field="establecimiento"/>
					<my:ImageButton addStyleNames='{style.action}' ui:field="editarContactoButton" text="Editar contacto" resource='{res.popup}'/>
					<my:ImageButton addStyleNames='{style.action}' ui:field="cambiarButton" text="Cambiar curso" resource='{res.popup}'/>
					<g:Button addStyleNames='{style.action}' ui:field="informacionButton" text="Información general"/>
				</div>
			</g:HTMLPanel>
			</g:ScrollPanel>	
		</g:north>
		<g:center>
			<g:ScrollPanel>
				<g:HTMLPanel>
				    <div class='{style.leftPanel}'>
				    	<g:DecoratorPanel addStyleNames='{style.panel}'>
				    		<g:HTMLPanel>
					    		<table class='{style.form}'>
					    			<tr>
					    				<td class='{style.label}'>Estado:</td>
					    				<td><g:ListBox ui:field="estadoBox"/> </td>
					    			</tr>
					    			<tr class='{style.separador}'>
					    				<td class='{style.label}'>Fecha</td>
					    				<td class='{style.label}'><g:Label ui:field="fechaLabel"/> </td>
					    			</tr>
					    			<tr>
					    				<td colspan='2' class='{style.fechaPicker}'><c:DatePicker ui:field="fechaPicker"/> </td>
					    			</tr>
					    			<tr>
					    				<td class='{style.label}'>Hora:</td>
					    				<td><e:TimeBox ui:field="timeBox"/> </td>
					    			</tr>
					    			<tr class='{style.separador}'>
					    				<td colspan='2' class='{style.label}'>Comentario</td>
					    			</tr>
					    			<tr>
					    				<td colspan='2'><g:TextArea ui:field="comentarioBox" characterWidth="40" /> </td>
					    			</tr>
					    			<tr class='{style.separador}'>
					    				<td></td>
					    				<td><g:Button ui:field="modificarButton" text="Modificar agenda"/> </td>
					    			</tr>
					    		</table>
				    		</g:HTMLPanel>
				    	</g:DecoratorPanel>
				    </div>
				    <div class='{style.rightPanel}'>
				    	<g:DecoratorPanel addStyleNames='{style.panelContacto}'>
				    		<g:HTMLPanel>
				    			<table class='{style.tablaContacto}'>
				    				<tr>
				    					<th> Camilo Ignacio Vera Cortés <g:Label ui:field="nombreContactoLabel"/> </th>
				    				</tr>
				    				<tr>
				    					<th> +56 9 74980994 <g:Label ui:field="fonoContactoLabel"/> </th>
				    				</tr>
				    				<tr>
				    					<th> camilo.vera@dreamer8.com<g:Label ui:field="emailContactoLabel"/> </th>
				    				</tr>
				    				<tr>
				    					<th> Director <g:Label ui:field="cargoContactoLabel"/> </th>
				    				</tr>
				    			</table>
				    		</g:HTMLPanel>
				    	</g:DecoratorPanel>
				    	<g:DecoratorPanel addStyleNames='{style.agendaPanel}'>
				    		<d:CellList ui:field="agendaList" addStyleNames='{style.agendaList}'/>
				    	</g:DecoratorPanel>
				    </div>
				</g:HTMLPanel>
			</g:ScrollPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 