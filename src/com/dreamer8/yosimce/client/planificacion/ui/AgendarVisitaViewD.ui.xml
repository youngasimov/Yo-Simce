<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:d="urn:import:com.google.gwt.user.cellview.client"
	xmlns:e="urn:import:com.dreamer8.yosimce.client.ui.eureka"
	xmlns:my="urn:import:com.dreamer8.yosimce.client.ui">
	
    <ui:with field='res' type='com.dreamer8.yosimce.client.ui.resources.SimceResources'/>
    
	<ui:style>


	
	.title {
		font-size: 20px;
		margin-left: 10px;
	}
	
	.curso {
		font-size: 20px;
		margin-right: 10px;
	}
	
	.leftPanel{
		display:block;
		float: left;
		width: 400px;
		height: 100%;
	}
	
	.rightPanel{
		display:block;
		float: left;
		width: 450px;
		height: 100%;
	}
	
	.panel{
		display:block;
		width: 300px;
		margin-left:auto;
		margin-right: auto;
		margin-top: 50px;
	}
	
	.form{
		width: 300px;
		text-align: center;
	}
	
	.form .label{
		font-size: 15px;
		font-weight: bold;
	}
	
	.form .separador td{
		padding-top: 30px;
		border-bottom: 1px solid black;
	}
	
	.agendaPanel{
		display: block;
		margin-top: 10px;
		margin-left:auto;
		margin-right: auto;
	}
	
	.agendaList{
		display: block;
		float: left;
		width: 440px;
	}
	
	.estName{
		display: inline;
		margin-left: 10px;
	}
	.timepicker{
		display: block;
		width: 80px;
		height: 20px;
		float: left;
	}
	
	.fechaPicker table{
		text-align: center;
		width: 300px;
	}
	
	.panelContacto{
		display: block;
		margin-top: 50px;
		margin-left:auto;
		margin-right: auto;
	}
	
	.tablaContacto{
		width: 440px;
		float: left;
	}
	
	</ui:style>
	<g:DockLayoutPanel unit="PX">
		<g:north size="45">
			<g:MenuBar ui:field="menu" animationEnabled="true" autoOpen='false' focusOnHoverEnabled='false'>
				<g:MenuItem enabled="false" addStyleNames='{style.title}'>Agenda de</g:MenuItem>
				<g:MenuItem enabled="false" ui:field="cursoItem"/>
				<g:MenuItem ui:field="editarContactoItem" text='Editar contacto'/>
				<g:MenuItem ui:field="editarDirectorItem" text='Editar director' />
				<g:MenuItem ui:field="cambiarItem" text='Cambiar curso' />
				<g:MenuItem ui:field="informacionItem" text='InformaciÃ³n general' />
			</g:MenuBar>
		</g:north>
		<g:center>
			<g:ScrollPanel>
				<g:HTMLPanel>
				    <div class='{style.leftPanel}'>
				    	<g:DecoratorPanel addStyleNames='{style.panel}'>
				    		<g:HTMLPanel>
					    		<table class='{style.form}'>
					    			<tr>
					    				<td class='{style.label}'>Estado:</td>
					    				<td><g:ListBox ui:field="estadoBox"/> </td>
					    			</tr>
					    			<tr class='{style.separador}'>
					    				<td class='{style.label}'>Fecha</td>
					    				<td class='{style.label}'><g:Label ui:field="fechaLabel"/> </td>
					    			</tr>
					    			<tr>
					    				<td colspan='2' class='{style.fechaPicker}'><c:DatePicker ui:field="fechaPicker"/> </td>
					    			</tr>
					    			<tr>
					    				<td class='{style.label}'>Hora:</td>
					    				<td><e:TimeBox ui:field="timeBox"/> </td>
					    			</tr>
					    			<tr class='{style.separador}'>
					    				<td colspan='2' class='{style.label}'>Comentario</td>
					    			</tr>
					    			<tr>
					    				<td colspan='2'><g:TextArea ui:field="comentarioBox" characterWidth="40" /> </td>
					    			</tr>
					    			<tr class='{style.separador}'>
					    				<td></td>
					    				<td><g:Button ui:field="modificarButton" text="Modificar agenda"/> </td>
					    			</tr>
					    		</table>
				    		</g:HTMLPanel>
				    	</g:DecoratorPanel>
				    </div>
				    <div class='{style.rightPanel}'>
				    	<g:DecoratorPanel addStyleNames='{style.panelContacto}'>
				    		<g:HTMLPanel>
				    			<table class='{style.tablaContacto}'>
				    				<tr>
				    					<th><g:Label ui:field="nombreContactoLabel"/> </th>
				    				</tr>
				    				<tr>
				    					<th> <g:Label ui:field="fonoContactoLabel"/> </th>
				    				</tr>
				    				<tr>
				    					<th><g:Label ui:field="emailContactoLabel"/> </th>
				    				</tr>
				    				<tr>
				    					<th><g:Label ui:field="cargoContactoLabel"/> </th>
				    				</tr>
				    			</table>
				    		</g:HTMLPanel>
				    	</g:DecoratorPanel>
				    	<g:DecoratorPanel addStyleNames='{style.agendaPanel}'>
				    		<d:CellList ui:field="agendaList" addStyleNames='{style.agendaList}'/>
				    	</g:DecoratorPanel>
				    </div>
				</g:HTMLPanel>
			</g:ScrollPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 