<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:my="urn:import:com.dreamer8.yosimce.client.ui"
	xmlns:u="urn:import:gwtupload.client">
	
	<ui:with field='res' type='com.dreamer8.yosimce.client.ui.resources.SimceResources'/>
	
	<ui:style>
	
	.title {
		font-size: 20px;
		margin-left: 10px;
		margin-right: 10px;
	}
	
	.title2{
		display: inline-block;
		min-width: 200px;
		text-align: center;
	}
	
	.subtitle{
		display:block;
		text-align: left;
		padding-left: 50px;
		font-size: 18px;
		font-weight: bolder;
		border-bottom: 1px solid black;
	}
	
	.data{
		font-size: 12px;
	}
	
	.actionsPanel{
		margin-top: 20px;
		margin-left: 3px;
		margin-right: 3px;
	}
	
	.actions{
		margin-left: auto;
		margin-right: auto;
	}
	
	.actions td{
		padding-left: 2px;
		padding-right: 2px;
		padding-bottom: 10px;
		padding-top: 10px;
	}
	
	.inline{
		display:inline-block;
	}
	
	</ui:style>
	<g:DockLayoutPanel unit="PX">
		<g:north size="45">
			<my:OverMenuBar ui:field="menu" animationEnabled="true" autoOpen='true' focusOnHoverEnabled='false'>
				<g:MenuItem enabled="false" addStyleNames='{style.title}' ui:field="menuItem"><div class='{style.title2}'>Centro Operación</div> ></g:MenuItem>
				<g:MenuItem enabled="false" ui:field="cosItem" text='Centro operación'/>
				<g:MenuItem ui:field="filtrosItem" text='Filtros' />
				<g:MenuItem ui:field="exportarItem" text='Exportar' />
			</my:OverMenuBar>
		</g:north>
		<g:center>
			<g:TabLayoutPanel animationVertical='false' animationDuration='200' barUnit='PX' barHeight='30'>
				<g:tab>
     				<g:header size='10'>Material</g:header>
     				<g:SplitLayoutPanel>
     					<g:south size='200'>
	     					<g:DockLayoutPanel unit="PX">
	     						<g:north size='30'>
									<g:Label addStyleNames='{style.subtitle}' text="Historial"/>
								</g:north>
	     						<g:center size='200'>
	     							<c:DataGrid addStyleNames='{style.data}' ui:field="historialGrid"/>
	     						</g:center>
	     					</g:DockLayoutPanel>
     					</g:south>
     					<g:center>
	     					<g:DockLayoutPanel unit="PX">
								<g:south size='30'>
									<g:HTMLPanel>
										<c:SimplePager ui:field='materialPager'/>
									</g:HTMLPanel>
								</g:south>
								<g:center>
									<c:DataGrid addStyleNames='{style.data}' ui:field="materialGrid"/>
								</g:center>
							</g:DockLayoutPanel>
						</g:center>
     				</g:SplitLayoutPanel>
     			</g:tab>
				<g:tab> 
       				<g:header size='10'>Ingreso</g:header>
       				<g:SplitLayoutPanel>
       					<g:west size='300'>
       						<g:DecoratorPanel addStyleNames='{style.actionsPanel}'>
	       						<g:HTMLPanel>
	       							<table class='{style.actions}'>
	       								<tr>
	       									<td><my:PlaceHolderTextBox tabIndex="1" placeholder='Código material' width="170px" ui:field='ingresoBox'/></td>
	       									<td><g:Button tabIndex="2" ui:field='ingresoAddButton' text='Añadir' width="90px"/></td>
	       								</tr>
	       								<tr>
	       									<td>Total ingresado:</td>
	       									<td><g:Label ui:field='totalIngresoLabel'/></td>
	       								</tr>
	       								<tr>
	       									<td colspan='2'><u:SingleUploaderModal ui:field="ingresoUploader"/></td>
	       								</tr>
	       								<tr>
	       									<td><g:Label visible='false' ui:field="docIngresoLabel"/></td>
	       									<td><my:ImageButton tabIndex="4" ui:field='ingresarButton' resource='{res.gear}' text='Ingresar' width="90px"/></td>
	       								</tr>
	       							</table>
	       						</g:HTMLPanel>
       						</g:DecoratorPanel>
       					</g:west>
       					<g:center>
       						<c:DataGrid addStyleNames='{style.data}' ui:field="ingresoGrid"/>
       					</g:center>
       				</g:SplitLayoutPanel>
     			</g:tab>
     			<g:tab> 
       				<g:header size='10'>Pre despacho</g:header> 
       				<g:SplitLayoutPanel>
       					<g:west size='300'>
       						<g:DecoratorPanel addStyleNames='{style.actionsPanel}'>
	       						<g:HTMLPanel>
	       							<table class='{style.actions}'>
	       								<tr>
	       									<td><my:PlaceHolderTextBox tabIndex="5" placeholder='Nombre lote' width="170px" ui:field='nuevoLoteBox'/> </td>
	       									<td> <my:ImageButton tabIndex="6" ui:field="addLoteButton" width='90px' text='Crear' resource='{res.gear}'/> </td>
	       								</tr>
	       								<tr>
	       									<td> <g:ListBox tabIndex="7" ui:field="lotesBox" width="170px" /> </td>
	       									<td> <my:ImageButton tabIndex="8" ui:field="removeLoteButton" width='90px' text='Eliminar' resource='{res.gear}'/> </td>
	       								</tr>
	       								<tr>
	       									<td> <my:PlaceHolderTextBox tabIndex="9" placeholder='Código material' width="170px"  ui:field="predespachoBox"/> </td>
	       									<td> <g:Button tabIndex="10" ui:field="predespachoButton" width="90px"  text='Añadir'/> </td>
	       								</tr>
	       								<tr>
		       								<td>Tamaño lote: <g:Label addStyleNames="{style.inline}" ui:field='totalLoteLabel'/></td>
	       								</tr>
	       							</table>
	       						</g:HTMLPanel>
       						</g:DecoratorPanel>
       					</g:west>
       					<g:center>
       						<c:DataGrid addStyleNames='{style.data}' ui:field="predespachoGrid"/>
       					</g:center>
       				</g:SplitLayoutPanel>
     			</g:tab>
     			<g:tab> 
       				<g:header size='10'>Despacho</g:header> 
       				<g:SplitLayoutPanel>
       					<g:west size='300'>
       						<g:DecoratorPanel addStyleNames='{style.actionsPanel}'>
	       						<g:HTMLPanel>
	       							<table class='{style.actions}'>
	       								<tr>
	       									<td colspan='2'><g:CheckBox tabIndex="11" ui:field='loteBox' text='Añadir lote'/></td>
	       								</tr>
	       								<tr>
	       									<td><my:PlaceHolderTextBox tabIndex="12" placeholder='Código material' ui:field='despachoBox' width='150px'/></td>
	       									<td><g:Button tabIndex="13" ui:field='despachoButton' text='Añadir' width="110px"/></td>
	       								</tr>
	       								<tr>
	       									<td colspan='2'> Total despachando: <g:Label addStyleNames='{style.inline}' ui:field="totalDespachoLabel"/> </td>
	       								</tr>
	       								<tr>
       										<td colspan='2'>Enviar a: <g:ListBox tabIndex="14" addStyleNames='{style.inline}' ui:field='destinoDespachoBox'/></td>
       									</tr>
       									<tr>
       										<td> <g:Label ui:field='coLabel'/></td>
       										<td> <my:ImageButton tabIndex="15" visible="false"  resource='{res.popup}' ui:field="changeCoButton" text='Cambiar' width="90px"/> </td>
       									</tr>
       									<tr>
       										<td colspan='2' > <my:PlaceHolderTextBox tabIndex="16" placeholder='Rut de quien retira' ui:field='rutRetiranteBox' width='220px'/> </td>
       									</tr>
       									<tr>
       										<td colspan='2'> <g:Label ui:field='retiranteLabel'/> </td>
       									</tr>
       									<tr>
       										<td><u:SingleUploaderModal ui:field="despachoUploader"/> </td>
       									</tr>
       									<tr>
       										<td> <g:Label ui:field='salidaDocLabel'/> </td>
       										<td> <my:ImageButton width="110px" tabIndex="18" resource='{res.gear}' ui:field='despacharButton' text='Despachar'/> </td>
       									</tr>
	       							</table>
	       						</g:HTMLPanel>
       						</g:DecoratorPanel>
       					</g:west>
       					<g:center>
       						<c:DataGrid addStyleNames='{style.data}' ui:field="despachoGrid"/>
       					</g:center>
       				</g:SplitLayoutPanel>
     			</g:tab>
			</g:TabLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 