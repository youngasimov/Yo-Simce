<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
		.dialogbox {
			width: 300px;
		}
		.panel {
			display:block;
			float: left;
			width: 100%;
			height: 100%;
		}
		
		.button{
			display:inline-block;
			float:right;
			margin: 5px;
		}
		
		.buscar{
			width: 90%;
		}
		
		.list{
			width: 290px;
			margin-left: auto;
			margin-right: auto;
			height: 350px;
		}
	</ui:style>
	<g:DialogBox animationEnabled="true" autoHideEnabled="true" autoHideOnHistoryEventsEnabled="true" glassEnabled="true" modal="true"  ui:field="panel">
		<g:HTMLPanel addStyleNames='{style.dialogbox}'>
			<table class='{style.panel}'>
				<tr>
					<th colspan='2'>Selector de curso</th>
				</tr>
				<tr>
					<td>Buscar:</td>
					<td><g:TextBox ui:field="rbdBox" addStyleNames='{style.buscar}'/></td>
				</tr>
				<tr>
					<td colspan='2'> <c:CellList ui:field="cursosList" addStyleNames='{style.list}'/> </td>
				</tr>
				<tr>
					<td colspan='2'>
						<g:Button addStyleNames='{style.button}' ui:field="seleccionarBox" text="Seleccionar"/>
						<g:Button addStyleNames='{style.button}' ui:field="cancelBox" text="Cancelar"/>
					</td>
				</tr>
			</table>
		</g:HTMLPanel>
	</g:DialogBox>
</ui:UiBinder> 