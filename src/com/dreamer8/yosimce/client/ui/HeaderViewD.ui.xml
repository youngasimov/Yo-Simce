<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
		.all{
			display:block;
			width: 100%;
			height: 100%;
			float: left;
			background: rgb(253,147,8);
		}
		.leftbar{
			float: left;
			height: 100%;
			list-style: none;
			margin: 0px;
			padding: 0px;
		}
		
		.leftbar li{
			display:inline-block;
			float: left;
			height: 100%;
			padding-left: 20px;
			padding-right: 20px;
			list-style: none;
			margin: 0px;
			padding-top: 0px;
			padding-bottom: 0px;
			border-right: 1px solid gray;
		}
		.logo {
			display: block;
			width: 100px;
			height: 100%;
			text-align: center;
			float: left;
			font-weight: bold;
			font-size: 1.5em;
			border-right: 1px solid black;
			text-decoration: none;
			color:black;
		}
		
		.logo a{
			color:black;
			cursor: pointer;
			text-decoration: none;
		}
		
		.username{
			font-weight: normal;
			font-size: 1em;
			height: 100%;
		}
		
		.actividades{
			float: right;
			height: 100%;
		}
		
		.listbox{
			float:left;
			margin-top: 5px;
			margin-right: 10px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames='{style.all}'>
	
		<ul class='{style.leftbar}'>
			<li class='{style.logo}'><a href='http://www.yosimce.cl'>YoSimce</a></li>
			<li class='{style.username}'><g:HTML ui:field="username"/></li>
		</ul>
		<div class='{style.actividades}'>
			<g:Button addStyleNames='{style.listbox}' text="Registro" ui:field="loginButton"/>
	        <g:ListBox addStyleNames='{style.listbox}' ui:field="actividadBox"/>
	        <g:ListBox addStyleNames='{style.listbox}' ui:field="nivelBox"/>
	        <g:ListBox addStyleNames='{style.listbox}' ui:field="tipoBox"/>
	    </div>	    
	</g:HTMLPanel>
</ui:UiBinder> 