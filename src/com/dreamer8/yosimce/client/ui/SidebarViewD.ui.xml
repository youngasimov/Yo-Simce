	<ui:style field="style" type="com.dreamer8.yosimce.client.ui.SidebarViewD.Style">
	.hide {display:none !important;}
	.sidebar .selected{
		background: rgb(255,183,107);
	}
	.sidebar ul{
		display:block;
		float: left;
		width: 100%;
		list-style: none;
		padding: 0px;
		margin: 0px;
	}
	
	.sidebar ul li{
		list-style: none;
		display:block;
		width: 100%;
		height: 2em;
		margin: 0px;
		padding: 0px;
	}
	
	.sidebar ul li a{
		display: block;
		color: #FFFFFF !important;
		float:left;
		width: 100%;
		height: 1em;
		padding-top: 0.5em;
		padding-bottom:0.5em;
		text-align: center;
		font-weight: bold;
		text-decoration: none;
		background: rgb(63,76,107); /* Old browsers */
		background: -moz-linear-gradient(top,  rgba(63,76,107,1) 0%, rgba(63,76,107,1) 100%); /* FF3.6+ */
		background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(63,76,107,1)), color-stop(100%,rgba(63,76,107,1))); /* Chrome,Safari4+ */
		background: -webkit-linear-gradient(top,  rgba(63,76,107,1) 0%,rgba(63,76,107,1) 100%); /* Chrome10+,Safari5.1+ */
		background: -o-linear-gradient(top,  rgba(63,76,107,1) 0%,rgba(63,76,107,1) 100%); /* Opera 11.10+ */
		background: -ms-linear-gradient(top,  rgba(63,76,107,1) 0%,rgba(63,76,107,1) 100%); /* IE10+ */
		background: linear-gradient(to bottom,  rgba(63,76,107,1) 0%,rgba(63,76,107,1) 100%); /* W3C */
	}
	
	.sidebar ul li ul{
		list-style: none;
		float: left;
		display:block;
		width: 100%;
		margin: 0px;
		padding: 0px;
	}
	
	.sidebar ul li ul li a{
		display:block;
		float: left;
		padding-left: 10%;
		width: 90%;
		padding-top: 1em;
		padding-bottom:1em;
		text-align: left;
		font-weight: lighter;
		text-decoration: none;
		color: black !important;
		background: white;
	}
	
	.sidebar ul li ul li a:HOVER{
		background: rgb(255,183,107);
	}
	  
	</ui:style>
