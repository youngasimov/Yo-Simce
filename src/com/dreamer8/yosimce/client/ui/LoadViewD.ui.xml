<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='res' type='com.dreamer8.yosimce.client.ui.resources.SimceResources'/>
	
	<ui:style>
	.content {
		display:block;
		width: 300px;
		margin-left: auto;
		margin-right: auto;
		margin-top: 100px;
	}
	
	.loadimage {
		display:block;
		width: 128px;
		height: 128px;
		margin-left: auto;
		margin-right: auto;
		margin-bottom: 20px;
	}
	
	.message{
		display:inline;
		float: left;
	}
	</ui:style>
	<g:HTMLPanel>
		<div class='{style.content}'>
			<div class='{style.loadimage}'>
				<g:Image resource='{res.load}' width="128px" height="128px"/>
			</div>
			<div class='{style.message}'>
				<g:HTML ui:field="message"/>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 