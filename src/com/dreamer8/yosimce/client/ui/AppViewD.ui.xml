<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.content{
			display:block;
			float: left;
			width: 100%;
			height: 100%;
			font-size: 12pt;
		}
	</ui:style>
	<g:DockLayoutPanel unit='EM' addStyleNames='{style.content}'>
		<g:north size='2'>
        	<g:SimpleLayoutPanel addStyleNames='{style.content}' ui:field="headerPanel"/> 
    	</g:north>
    	<g:center>
        	<g:SplitLayoutPanel addStyleNames='{style.content}'>
        		<g:west size='200'>
        			<g:SimpleLayoutPanel addStyleNames='{style.content}' ui:field="sidebarPanel"/>
        		</g:west>
        		<g:center>
        			<g:SimpleLayoutPanel addStyleNames='{style.content}' ui:field="contentPanel"/>
        		</g:center>
        	</g:SplitLayoutPanel>
    	</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 