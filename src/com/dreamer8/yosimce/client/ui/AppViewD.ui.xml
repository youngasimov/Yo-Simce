<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:com.dreamer8.yosimce.client.ui">
	
	<ui:with field='res' type='com.dreamer8.yosimce.client.ui.resources.SimceResources'/>
	
	<ui:style field="style" type="com.dreamer8.yosimce.client.ui.AppViewD.Style">
	
	.sidebarActions{
		display:block;
		width: 100%;
		height: 50px;
		float: left;
	}
	
	.sidebarButtonPanel{
		background: #EFEFEF;
	}
	
	.sidebarButton{
		display:block;
		width: 35px;
		height: 35px;
		float: right;
	}
	
	.sidebarPanel{
		display:block;
		width: 100%;
		height: 50px;
		float: left;
	}
	
	.sidebarContainer{
		display:block;
		width: 300px;
		position:fixed;
		top: 40px;
		bottom: 30px;
		left: -310px;
		border-right: 1px solid black;
		z-index: 1;
		background: white;
		-webkit-box-shadow:  8px 0px 10px -5px rgba(100, 100, 100, 1);
        box-shadow:  8px 0px 10px -5px rgba(100, 100, 100, 1);
        -webkit-transition: all 100ms linear;
		-moz-transition: all 100ms linear;
        -ms-transition: all 100ms linear;
        -o-transition: all 100ms linear;
		transition: all 100ms linear;
	}
	
	.showMenu{
		left: 0 !important;
		-webkit-transition: all 100ms linear;
		-moz-transition: all 100ms linear;
        -ms-transition: all 100ms linear;
        -o-transition: all 100ms linear;
		transition: all 100ms linear;
	}
	
	.content{
		display:block;
		float: left;
		width: 100%;
		height: 100%;
		font-size: 12pt;
	}
	
	.footer{
		background: #CCCCCC;
		border-top: 1px solid black;
	}
	
	.imageLeft{
		position:absolute;
		top:1px;
		left: 20px;
	}
	
	.imageCenter{
		display:block;
		width:220px;
		margin:auto;
	}
	
	.imageRight{
		position:absolute;
		top: 1px;
		right:20px;
	}
	
	</ui:style>
	<g:DockLayoutPanel unit='PX' addStyleNames='{style.content}' ui:field="appPanel">
		<g:north size='40'>
        	<g:SimpleLayoutPanel addStyleNames='{style.content}' ui:field="headerPanel"/> 
    	</g:north>
    	<g:south size='30'>
    		<g:HTMLPanel addStyleNames='{style.footer}'>
    			<g:Image addStyleNames='{style.imageCenter}' resource='{res.barLoad}' ui:field="barload" />
    			<a href='http://www.yosimce.cl' target="_blank" class='{style.imageLeft}'><g:Image resource='{res.logoSimce}'/></a>
    			<a href='http://www.dreamer8.com' target="_blank" class='{style.imageRight}'><g:Image resource='{res.dreamer}'/></a>
    		</g:HTMLPanel>
    	</g:south>
    	<g:center>
    		<g:HTMLPanel>
    			<div class='{style.sidebarContainer}' ui:field="sidebarContainer">
		    		<g:FocusPanel addStyleNames='{style.content}' ui:field="sidebarFocusPanel"><g:SimpleLayoutPanel addStyleNames='{style.content}' ui:field="sidebarPanel"/></g:FocusPanel>
	 			</div>
	        	<g:SimpleLayoutPanel addStyleNames='{style.content}' ui:field="contentPanel"/>
        	</g:HTMLPanel>
    	</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 