<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.header{
		display:block;
		width: 100%;
		height: 50px;
		float: left;
		position: absolute;
		top: 0px;
		left: 0px;
		padding-left: 80px;
		padding-top: 10px;
		border-bottom: 1px solid black;
	}
	
	.content{
		display:block;
		float: left;
		width: 100%;
		height: 100%;
		position:absolute;
		top: 50px;
		bottom: 0px;
		left: 0px;
	}
	
	.title {
		display:inline-block;
		position: relative;
		height: 50px;
		float: left;
		font-size: 26px;
	}
	.actions{
		display:inline-block;
		position: relative;
		height: 50px;
		float: left;
		margin-left: 50px;
	}
	
	.action{
		margin: 5px;
	}
	.estName{
		display: inline;
		margin-left: 20px;
	}
	</ui:style>
	<g:DockLayoutPanel unit="EM">
		<g:north size="4">
			<g:HTMLPanel addStyleNames='{style.header}'>
				<div class='{style.title}'><g:HTML addStyleNames='{style.estName}' ui:field="establecimiento"/> </div>
				<div class='{style.actions}'>
					<g:Button addStyleNames='{style.action}' ui:field="historialButton" text="Historial de cambios"/>
					<g:Button addStyleNames='{style.action}' ui:field="cambiarButton" text="Cambiar"/>
				</div>
			</g:HTMLPanel>	
		</g:north>
		<g:center>
			<g:ScrollPanel>
				<g:HTMLPanel>
					<table>
						<tr>
							<td colspan='2'>General</td>
						</tr>
						<tr>
							<td>RBD:</td>
							<td><g:Label ui:field="rbdLabel"/> </td>
						</tr>
						<tr>
							<td>Regi√≥n:</td>
							<td><g:Label ui:field="regionLabel"/> </td>
						</tr>
						<tr>
							<td>Comuna:</td>
							<td><g:Label ui:field="comunaLabel"/> </td>
						</tr>
						<tr>
							<td>Cursos:</td>
							<td><g:Label ui:field="cursosLabel"/> </td>
						</tr>
					</table>
				</g:HTMLPanel>
			</g:ScrollPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 