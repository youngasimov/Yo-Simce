<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:my="urn:import:com.dreamer8.yosimce.client.ui">
	
	<ui:with field='res' type='com.dreamer8.yosimce.client.ui.resources.SimceResources'/>
	
	<ui:style type='com.dreamer8.yosimce.client.general.ui.CentroControlViewD.Styles'>
	.title {
		font-size: 20px;
		margin-left: 10px;
		margin-right: 10px;
	}
	
	.title2{
		display: inline-block;
		min-width: 200px;
		text-align: center;
	}
	
	.scroll{
		width: 100%;
		height: 100%;
	}
	
	.data{
		font-size: 12px;
	}
	
	.panelGraficos{
		display: block;
		width: 90%;
		margin-left: auto;
		margin-right: auto;
		min-width: 600px;
		max-width: 1000px;
	}
	
	.realTimeData{
		min-width: 420px;
	}
	
	.button{
		cursor: pointer;
	}
	
	.childCell {
  		padding-left: 30px;
  		border: 2px solid #eee !important;
  		background: #eee !important;
	}

	.groupHeaderCell {
  		padding: 1px 15px;
  		color: #4b4a4a;
  		text-shadow: #ddf 1px 1px 0;
  		font-size: 130%;
  		background: #eee;
	}
	
	</ui:style>
	<g:DockLayoutPanel unit="PX">
		<g:north size="45">
			<my:OverMenuBar ui:field="menu" animationEnabled="true" autoOpen='true' focusOnHoverEnabled='false'>
				<g:MenuItem enabled="false" addStyleNames='{style.title}' ui:field="menuItem"><div class='{style.title2}'>Centro de control</div> ></g:MenuItem>
				<g:MenuItem>
					Actualizar
					<g:MenuBar vertical='true'>
						<g:MenuItem ui:field="actualizarMenu">Actualizar</g:MenuItem>
						<g:MenuItem ui:field="autoCargaMenu">Actualizar cada 1 minutos</g:MenuItem>
						<g:MenuItem ui:field="autoCarga2Menu">Actualizar cada 2 minutos</g:MenuItem>
						<g:MenuItem ui:field="autoCarga5Menu">Actualizar cada 5 minutos</g:MenuItem>
						<g:MenuItem ui:field="autoCarga10Menu">Actualizar cada 10 minutos</g:MenuItem>
					</g:MenuBar>
				</g:MenuItem>
				<g:MenuItem ui:field="sendToMonitorItem">Monitorear</g:MenuItem>
				<g:MenuItem ui:field="removeFromMonitorItem">No monitorear</g:MenuItem>
			</my:OverMenuBar>	
		</g:north>
		<g:west size='300'>
			<g:StackLayoutPanel unit="PX" ui:field="leftPanel">
				<g:stack>
					<g:header size='35'>Filtros</g:header>
					<g:HTMLPanel>
						<table style='width: 100%'>
							<tr>
								<th colspan='4'>Filtros</th>
							</tr>
							<tr>
								<th colspan='4'>Regi√≥n</th>
							</tr>
							<tr>
								<td colspan='3'> <g:ListBox ui:field="regionBox" /> </td>
								<td><g:Image ui:field="seleccionarRegionButton" resource="{res.filtro}" addStyleNames='{style.button}'/></td>
							</tr>
							<tr>
								<th colspan='2'>Zona</th>
								<th colspan='2'>Comuna</th>
							</tr>
							<tr>
								<td> <g:ListBox ui:field="zonaBox" /> </td>
								<td><g:Image ui:field="seleccionarZonaButton" resource="{res.filtro}" addStyleNames='{style.button}' /></td>
								<td> <g:ListBox ui:field="comunaBox" /> </td>
								<td><g:Image ui:field="seleccionarComunaButton" resource="{res.filtro}" addStyleNames='{style.button}' /></td>
							</tr>
						</table>
					</g:HTMLPanel>
				</g:stack>
				<g:stack>
					<g:header size='35'>Monitoreados</g:header>
					<g:ScrollPanel>
						<c:CellList ui:field="monitorList"/>
					</g:ScrollPanel>
				</g:stack>
			</g:StackLayoutPanel>
		</g:west>
		<g:center>
			<g:TabLayoutPanel addStyleNames='{style.realTimeData}' barHeight='25' barUnit='PX' animationDuration="300" animationVertical="true">
				<g:tab>
					<g:header>Datos en tiempo real</g:header>
					<g:DockLayoutPanel unit="PX">
						<g:north size="30">
							<g:CheckBox ui:field="selectAllBox" text="seleccionar todo"/>
						</g:north>
						<g:south size="35">
					     	<g:HTMLPanel>
				       			<table style="width:100%">
				         			<tr>
				           				<td align='center'>
				             				<c:SimplePager  ui:field='allPager' />
				           				</td>
				         			</tr>
				       			</table>
				     		</g:HTMLPanel>
				  		</g:south>
						<g:center>
							<c:DataGrid ui:field="allTable" addStyleNames='{style.data}' minimumTableWidth="650px"/>
						</g:center>
					</g:DockLayoutPanel>
				</g:tab>
				<g:tab>
					<g:header>Monitor</g:header>
					<g:HTMLPanel>
						
					</g:HTMLPanel>
				</g:tab>
				<g:tab>
					<g:header>Ayuda</g:header>
					<g:HTMLPanel>
						
					</g:HTMLPanel>
				</g:tab>
			</g:TabLayoutPanel>
		</g:center>
		
	</g:DockLayoutPanel>
</ui:UiBinder> 