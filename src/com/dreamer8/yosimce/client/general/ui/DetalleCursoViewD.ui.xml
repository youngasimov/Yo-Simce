<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:com.dreamer8.yosimce.client.ui">
	
	<ui:with field='res' type='com.dreamer8.yosimce.client.ui.resources.SimceResources'/>
	
	<ui:style field="style" type="com.dreamer8.yosimce.client.general.ui.DetalleCursoViewD.Style">
	.header{
		display:block;
		width: 100%;
		height: 50px;
		float: left;
		position: absolute;
		top: 0px;
		left: 0px;
		padding-left: 80px;
		padding-top: 10px;
		border-bottom: 1px solid black;
	}
	
	.content{
		display:block;
		float: left;
		width: 100%;
		height: 100%;
		position:absolute;
		top: 50px;
		bottom: 0px;
		left: 0px;
	}
	
	.title {
		display:inline-block;
		position: relative;
		height: 50px;
		float: left;
		font-size: 26px;
	}
	.actions{
		display:inline-block;
		position: relative;
		height: 50px;
		float: left;
		margin-left: 50px;
	}
	
	.action{
		margin: 5px;
	}
	.estName{
		display: inline;
		margin-left: 20px;
	}
	
	.scroll{
		width: 100%;
		height: 100%;
	}
	
	.decPanel{
		display:block;
		width:400px;
		margin-left:auto;
		margin-right: auto;
		margin-top: 50px;
		margin-bottom: 50px;
	}
	
	.panel{
		width: 400px;
	}
	
	.panel td{
		width: 20px;
		padding: 10px;
		text-align: left;
	}
	
	.panel .subtitle td{
		font-weight: bolder;
		text-align: center;
		border-top: 2px solid black;
		border-bottom: 1px solid #AAAAAA;
		font-size: 16px;
	}
	
	.line{
		border-bottom: 1px solid #AAAAAA;
	}

	.full{
		width: 100%;
	}
	
	.panel .label{
		font-weight: bold;
		font-size: 12px;
	}
	
	</ui:style>
	<g:DockLayoutPanel unit="EM">
		<g:north size="4">
			<g:HTMLPanel addStyleNames='{style.header}'>
				<div class='{style.title}'><g:HTML addStyleNames='{style.estName}' ui:field="establecimiento"/> </div>
				<div class='{style.actions}'>
					<my:ImageButton addStyleNames='{style.action}' ui:field="cambiarButton" text="Cambiar" resource='{res.popup}'/>
				</div>
			</g:HTMLPanel>	
		</g:north>
		<g:center>
			<g:ScrollPanel addStyleNames='{style.scroll}'>
				<g:DecoratorPanel addStyleNames='{style.decPanel}'>
					<g:HTMLPanel>
						<table class='{style.panel}'>
							<tr class='{style.subtitle}'>
								<td colspan='2'>General</td>
							</tr>
							<tr>
								<td class='{style.label}'>RBD:</td>
								<td><g:Label ui:field="rbdLabel"/> </td>
							</tr>
							<tr>
								<td class='{style.label}'>Regi√≥n:</td>
								<td><g:Label ui:field="regionLabel"/> </td>
							</tr>
							<tr>
								<td class='{style.label}'>Comuna:</td>
								<td><g:Label ui:field="comunaLabel"/> </td>
							</tr>
							<tr>
								<td class='{style.label}'>Curso:</td>
								<td><g:Label ui:field="cursoLabel"/> </td>
							</tr>
							<tr>
								<td class='{style.label}'>Tipo:</td>
								<td><g:Label ui:field="tipoLabel"/> </td>
							</tr>
							<tr class='{style.subtitle}'>
								<td colspan='2'>Personas</td>
							</tr>
							<tr>
								<td colspan='2'> <g:FlexTable addStyleNames='{style.full}' ui:field='personasTable'/> </td>
							</tr>
							<tr class='{style.subtitle}'>
								<td colspan='2'>Contactos</td>
							</tr>
							<tr>
								<td colspan='2'> <g:FlexTable addStyleNames='{style.full}' ui:field='contactosTable'/> </td>
							</tr>
						</table>
					</g:HTMLPanel>
				</g:DecoratorPanel>
			</g:ScrollPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 