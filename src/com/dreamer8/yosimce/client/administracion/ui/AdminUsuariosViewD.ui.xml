<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
	.header{
		display:block;
		width: 100%;
		height: 50px;
		float: left;
		position: absolute;
		top: 0px;
		left: 0px;
		padding-left: 80px;
		padding-top: 10px;
		border-bottom: 1px solid black;
	}
	
	.content{
		display:block;
		float: left;
		width: 100%;
		height: 100%;
		position:absolute;
		top: 50px;
		bottom: 0px;
		left: 0px;
	}
	
	.title {
		display:inline-block;
		position: relative;
		height: 50px;
		float: left;
		font-size: 26px;
	}
	
	.actions{
		display:inline-block;
		position: relative;
		height: 50px;
		float: left;
		margin-left: 50px;
	}
	
	.action{
		margin: 5px;
	}
	
	.estName{
		display: inline;
		margin-left: 20px;
	}
	
	.usersListPanel{
		display:block;
		float: left;
		width: 99%;
		height: 100%;
		border-right: 1px solid black;
	}
	
	.usersSearchPanel{
		display:block;
		position: absolute;
		top:0px;
		left: 0px;
		width: 100%;
		height: 1.5em;
		border-bottom: 1px solid black;
	}
	
	.usersList{
		display:block;
		position:absolute;
		top: 2em;
		bottom: 0px;
		left:0px;
		width: 100%;
	}
	
	.full{
		width: 100%;
		height: 100%;
	}
	
	.userForm{
		display:block;
		margin-top: 50px;
		margin-left: auto;
		margin-right: auto;
		width: 350px;
	}
	
	.label{
		padding:10px;
		font-size: 14px;
		font-weight: bold;
	}
	
	</ui:style>
	<g:DockLayoutPanel unit="EM">
		<g:north size="4">
			<g:HTMLPanel addStyleNames='{style.header}'>
				<div class='{style.title}'>Administración de usuarios </div>
				<div class='{style.actions}'>
					|<g:HTML styleName='{style.estName}' ui:field="usuarioSeleccionado"/>
					<g:Button addStyleNames='{style.action}' ui:field="reestablecerPassButton" text="Reiniciar Contraseña"/>
					<g:Button addStyleNames='{style.action}' ui:field="updateButton" text="Actualizar"/>
				</div>
			</g:HTMLPanel>	
		</g:north>
		<g:west size="18">
			<g:HTMLPanel addStyleNames='{style.usersListPanel}'>
				<div style='{style.usersSearchPanel}'>
					<g:TextBox ui:field="searchBox" width="14em"/>
					<g:Button ui:field="clearButton" width="6em" text="limpiar"/>
				</div>
				<div style='{style.usersList}'>
					<g:ScrollPanel addStyleNames='{style.full}'>
						<c:CellList addStyleNames='{style.full}' ui:field="usuariosList"/>
					</g:ScrollPanel>
				</div>
			</g:HTMLPanel>
		</g:west>
		<g:center>
			<g:HTMLPanel>
				<g:DecoratorPanel addStyleNames='{style.userForm}'>
					<g:HTMLPanel>
						<table style='width: 350px'>
							<tr>
								<td class='{style.label}'>Nombre:</td>
								<td><g:Label ui:field="nombreLabel"/> </td>
							</tr>
							<tr>
								<td class='{style.label}'>Rut:</td>
								<td><g:Label ui:field="rutLabel"/> </td>
							</tr>
							<tr>
								<td class='{style.label}'>Tipo:</td>
								<td><g:ListBox ui:field="tipoBox" /> </td>
							</tr>
							<tr>
								<td class='{style.label}'><g:Label ui:field="emplazamientoLabel"/></td>
								<td><g:ListBox ui:field="emplazamientoBox" /> </td>
							</tr>
						</table>
					</g:HTMLPanel>
				</g:DecoratorPanel>
			</g:HTMLPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 