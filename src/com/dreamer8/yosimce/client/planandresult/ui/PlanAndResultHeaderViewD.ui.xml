<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
		.all{
			display:block;
			width: 100%;
			height: 50px;
			float: left;
			background: rgb(253,147,8);
		}
		.logo {
			display: block;
			width: 100px;
			text-align: center;
			float: left;
		}
		.modules {
			display: block;
			width: 100px;
			text-align: center;
			float: left;
			position: relative;
			list-style: none;
			margin: 0;
			padding: 0px;
		}
		
		.modules:HOVER ul{
			visibility: visible;
		}
		
		.modules ul{
			display:block;
			width: 200px;
			position: absolute;
			visibility: collapse;
			top:60px;
			
		}
		
		.modules li{
			display:block;
			float: left;
			height: 30px;
		}
		
		.modules li:HOVER{
			background: gray;
		}
		.actions{
			display:block;
			float:left;
			height: 60px;
		}
		.actividades{
			float: right;
			height: 60px;
		}
		
		.listbox{
			float:left;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames='{style.all}'>
	    <div class='{style.logo}'>
	        YoSimce
	    </div>
	    <div class='{style.modules}'>
	    	PLanificaci√≥n y Resultados
	        <ul ui:field="modulesPanel">
	        	<li><g:Anchor ui:field="yosimceLink"/></li>
	        	<li><g:Hyperlink ui:field="planAndResultLink"/></li>
	        </ul>
	    </div>
	    <div class='{style.actions}'>
	        <g:Anchor ui:field="exportAction"/>
	    </div>
	    <div class='{style.actividades}'>
	        <g:ListBox addStyleNames='{style.listbox}' ui:field="actividadBox"/>
	        <g:ListBox addStyleNames='{style.listbox}' ui:field="nivelBox"/>
	        <g:ListBox addStyleNames='{style.listbox}' ui:field="tipoBox"/>
	    </div>
	    
	</g:HTMLPanel>
</ui:UiBinder> 