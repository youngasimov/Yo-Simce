<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.title {
			display:block;
			width: 100%;
			height: 3em;
			padding-top: 0.5em;
			font-size: 16pt;
			text-align: center;
			float: left;
			position: absolute;
			top: 0px;
			left: 0px;
		}
		.tabs {
			display:block;
			width: 100%;
			height: 100%;
			float: left;
			position: absolute;
			top: 3em;
			left: 0px;
			bottom: 0px;
		}
		.maxSpace{
			width: 100%;
			height: 100%;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames='{style.maxSpace}'>
		<div class='{style.title}'>
		    <g:HTML ui:field="title" />
		</div>
		<div class = '{style.tabs}'>
			<g:TabLayoutPanel barUnit='EM' barHeight='1.5' addStyleNames='{style.maxSpace}' ui:field="mainTab">
    			<g:tab>
    				<g:header>General</g:header>
        			<g:FlowPanel ui:field="generalPanel"/>
    			</g:tab>
    			<g:tab>
    				<g:header>Agendamiento</g:header>
    				<g:FlowPanel ui:field="agendamientoPanel"/>
        		</g:tab>
        		<g:tab>
        			<g:header>Actividad</g:header>
    				<g:FlowPanel ui:field="actividadPanel"/>
        		</g:tab>
        		<g:tab>
        			<g:header>Alumnos</g:header>
    				<g:FlowPanel ui:field="alumnosPanel"/>
        		</g:tab>
        		<g:tab>
        			<g:header>Material</g:header>
    				<g:FlowPanel ui:field="materialPanel"/>
        		</g:tab>
        		<g:tab>
        			<g:header>Historial</g:header>
    				<g:FlowPanel ui:field="historialPanel"/>
        		</g:tab>
    		</g:TabLayoutPanel>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 