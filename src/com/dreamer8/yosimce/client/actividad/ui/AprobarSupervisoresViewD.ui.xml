<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:my="urn:import:com.dreamer8.yosimce.client.ui">
	
	<ui:with field='res' type='com.dreamer8.yosimce.client.ui.resources.SimceResources'/>
	
	<ui:style>
	
	.title {
		font-size: 20px;
		margin-left: 10px;
		margin-right: 10px;
	}
	
	.title2{
		display: inline-block;
		min-width:200px;
		text-align: center;
	}
	
	.data{
		font-size: 12px;
	}

	
	</ui:style>
	<g:DockLayoutPanel unit="PX">
		<g:north size="45">
			<my:OverMenuBar ui:field="menu" animationEnabled="true" autoOpen='true' focusOnHoverEnabled='false'>
				<g:MenuItem enabled="false" addStyleNames='{style.title}' ui:field="menuItem"><div class='{style.title2}'>Evaluación supervisores</div> ></g:MenuItem>
			</my:OverMenuBar>
		</g:north>
		<g:center>
			<g:TabLayoutPanel  barUnit='PX' barHeight='30'>
				<g:tab>
					<g:header size='7'>Evaluación supervisores</g:header>
					<g:DockLayoutPanel unit="PX">
						<g:north size="40">
							<g:HTMLPanel>
								<table>
									<tr>
										<td>Buscar supervisor:</td>
										<td><g:SuggestBox ui:field="supervisorSearchBox" width="400px"/> </td>
										<td><g:Button ui:field="search" text="Buscar"/> </td>
										<td><g:Button ui:field="clean" text="Limpiar"/> </td>
									</tr>
								</table>
							</g:HTMLPanel>
						</g:north>
						<g:center>
							<c:DataGrid ui:field='dataGrid' addStyleNames='{style.data}'/>
						</g:center>
						<g:south size="30">
		      				<g:HTMLPanel>
		        				<table style="width:100%">
		          					<tr>
		            					<td align='center'>
		              						<c:SimplePager ui:field='pager' />
		            					</td>
		          					</tr>
		        				</table>
		      				</g:HTMLPanel>
		    			</g:south>
		    		</g:DockLayoutPanel>
    			</g:tab>
    			<g:tab>
    				<g:header size='7'>Evaluación examinadores suplentes</g:header>
    				<g:DockLayoutPanel unit="PX">
						<g:center>
							<c:DataGrid ui:field='suplentesdataGrid' addStyleNames='{style.data}'/>
						</g:center>
						<g:south size="30">
		      				<g:HTMLPanel>
		        				<table style="width:100%">
		          					<tr>
		            					<td align='center'>
		              						<c:SimplePager ui:field='suplentesPager' />
		            					</td>
		          					</tr>
		        				</table>
		      				</g:HTMLPanel>
		    			</g:south>
		    		</g:DockLayoutPanel>
    			</g:tab>
    		</g:TabLayoutPanel>
    	</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>