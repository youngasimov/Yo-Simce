<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	
	<ui:with field='res' type='com.dreamer8.yosimce.client.ui.resources.SimceResources'/>
	
	<ui:style>
	.header{
		display:block;
		width: 100%;
		height: 50px;
		float: left;
		position: absolute;
		top: 0px;
		left: 0px;
		padding-left: 80px;
		padding-top: 10px;
		border-bottom: 1px solid black;
	}
	
	.content{
		display:block;
		float: left;
		width: 100%;
		height: 100%;
		position:absolute;
		top: 50px;
		bottom: 0px;
		left: 0px;
	}
	
	.title {
		display:inline-block;
		position: relative;
		height: 50px;
		float: left;
		font-size: 26px;
	}
	.actions{
		display:inline-block;
		position: relative;
		height: 50px;
		float: left;
		margin-left: 50px;
	}
	
	.action{
		margin: 5px;
	}
	
	.estName{
		display: inline;
		margin-left: 20px;
	}
	</ui:style>
	<g:DockLayoutPanel unit="EM">
		<g:north size="4">
			<g:HTMLPanel addStyleNames='{style.header}'>
				<div class='{style.title}'>Sincronizaci√≥n <g:HTML ui:field="establecimientoSeleccionado"/></div>
				<div class='{style.actions}'>
					<g:PushButton  enabled='true' addStyleNames='{style.action}' ui:field="cambiarButton">
						<g:upFace image='{res.popup}'>
					    	<b>Cambiar</b>
					   	</g:upFace>
					</g:PushButton>
					<!-- 
					<g:PushButton  enabled='true' addStyleNames='{style.action}' ui:field="agregarButton">
						<g:upFace image='{res.popup}'>
					    	<b>Agregar alumno</b>
					   	</g:upFace>
					</g:PushButton>
					 -->
					 <g:Button addStyleNames='{style.action}' ui:field="guardarButton" text="Guardar"/>
					<g:Button addStyleNames='{style.action}' ui:field="conProblemasButton" text="Material defectuoso"/>
				</div>
			</g:HTMLPanel>	
		</g:north>
		<g:center>
			<c:DataGrid ui:field='dataGrid' />
		</g:center>
    	<g:south size="3">
	     	<g:HTMLPanel>
       			<table style="width:100%">
         			<tr>
           				<td align='center'>
             					alumnos totales: <g:HTML ui:field="alumnosHtml" />
           				</td>
         			</tr>
       			</table>
     		</g:HTMLPanel>
  		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 