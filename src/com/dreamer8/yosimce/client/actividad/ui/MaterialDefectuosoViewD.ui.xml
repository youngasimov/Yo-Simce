<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:my="urn:import:com.dreamer8.yosimce.client.ui">
	
    <ui:with field='res' type='com.dreamer8.yosimce.client.ui.resources.SimceResources'/>
	<ui:style>
	.header{
		display:inline-block;
		float: left;
		position: absolute;
		top: 0px;
		left: 0px;
		padding-left: 10px;
		min-width: 950px;
	}
	
	.scroll{
		width: 100%;
		height: 100%;
		border-bottom: 1px solid black;
	}
	
	.title {
		display:inline-block;
		position: relative;
		height: 50px;
		float: left;
		font-size: 26px;
	}
	.actions{
		display:inline-block;
		position: relative;
		height: 50px;
		float: left;
		margin-left: 10px;
	}
	
	.action{
		margin: 5px;
	}
	
	.estName{
		display: inline;
		margin-left: 10px;
	}
	
	.data{
		font-size: 10px;
	}

	.addMaterialBar{
		width: 100%;
	}
	
	.materialBarWidget{
		float:left;
		margin: 5px;
	}
	</ui:style>
	<g:DockLayoutPanel unit="EM">
		<g:north size="4">
			<g:ScrollPanel addStyleNames='{style.scroll}'>
			<g:HTMLPanel addStyleNames='{style.header}'>
				<div class='{style.title}'>Material defectuoso</div>
				<div class='{style.actions}'>
					<g:HTML styleName='{style.estName}' ui:field="establecimientoSeleccionado"/>
					<my:ImageButton addStyleNames='{style.action}' text='Cambiar' resource='{res.popup}' ui:field="cambiarButton"/>
				</div>
			</g:HTMLPanel>
			</g:ScrollPanel>	
		</g:north>
		<g:north size="3">
			<g:FlowPanel addStyleNames='{style.addMaterialBar}'>
		        <my:PlaceHolderTextBox addStyleNames='{style.materialBarWidget}' placeholder="Pendrive" ui:field="materialBox"/>
		        <g:ListBox addStyleNames='{style.materialBarWidget}' ui:field="estadoBox"/>
		        <g:Button addStyleNames='{style.materialBarWidget}' text="AÃ±adir" ui:field="addButton"/>
			</g:FlowPanel>
		</g:north>
		<g:center>
			<c:DataGrid ui:field='dataGrid'  addStyleNames='{style.data}'/>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 