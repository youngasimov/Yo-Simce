<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:com.dreamer8.yosimce.client.ui">
	
	<ui:with field='res' type='com.dreamer8.yosimce.client.ui.resources.SimceResources'/>
	
	<ui:style>
	.menu{
		height: 45px;
	}
	.title {
		font-size: 20px;
		margin-left: 30px;
		margin-right: 30px;
	}
	
	.title2{
		display: inline-block;
		min-width: 200px;
		text-align: center;
	}
	
	.button{
		height: 38px;
	}
	
	.center{
		margin: 0 auto 0 auto;
	}
	
	</ui:style>
	<g:DockLayoutPanel unit="PX">
		<g:north size="45">
			<my:OverMenuBar addStyleNames='{style.menu}' ui:field="menu" animationEnabled="true" autoOpen='true' focusOnHoverEnabled='false'>
				<g:MenuItem enabled="false" addStyleNames='{style.title}' ui:field="menuItem"><div class='{style.title2}'>Registro de avance</div> ></g:MenuItem>
			</my:OverMenuBar>
		</g:north>
		<g:north size="45">
			<g:HTMLPanel>
				<table class='{style.center}'>
					<tr>
						<td>Código:</td>
						<td> <my:PlaceHolderTextBox  placeholder='Ingrese código prueba' width="200px" ui:field='codigoBox'/></td>
						<td><my:ImageButton addStyleNames='{style.button}' ui:field='revisadaButton' resource='{res.acceptPage}' text='Revisada'/> </td>
						<td><g:Button ui:field="noRevisadaButton" addStyleNames='{style.button}' text="No revisada"/>  </td>
						<td> <g:CheckBox ui:field="enterReviewBox" value="true" text="activar revisado al presionar 'Enter'"/> </td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:north>
		<g:center>
			<g:SimplePanel ui:field="graphPanel"/>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 