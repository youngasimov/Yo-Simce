<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.header{
		display:block;
		width: 100%;
		height: 50px;
		float: left;
		position: absolute;
		top: 0px;
		left: 0px;
		padding-left: 80px;
		padding-top: 10px;
		border-bottom: 1px solid black;
	}
	
	.content{
		display:block;
		float: left;
		width: 100%;
		height: 100%;
		position:absolute;
		top: 50px;
		bottom: 0px;
		left: 0px;
	}
	
	.title {
		display:inline-block;
		position: relative;
		height: 50px;
		float: left;
		font-size: 26px;
	}
	.actions{
		display:inline-block;
		position: relative;
		height: 50px;
		float: left;
		margin-left: 50px;
	}
	
	.action{
		margin: 5px;
	}
	
	.full{
		width: 100%;
		height: 100%;
	}
	
	.formPanel{
		width: 500px;
		margin-top:50px;
		margin-left: auto;
		margin-right: auto;
	}
	</ui:style>
	<g:DockLayoutPanel unit="EM">
		<g:north size="4">
			<g:HTMLPanel addStyleNames='{style.header}'>
				<div class='{style.title}'>Formulario de Actividad | <g:HTML ui:field="establecimientoSeleccionado"/></div>
				<div class='{style.actions}'>
					<g:Button addStyleNames='{style.action}' ui:field="filtrosButton" text="Guardar"/>
				</div>
			</g:HTMLPanel>	
		</g:north>
		<g:center>
			<g:ScrollPanel addStyleNames='{style.full}'>
				<g:DecoratorPanel addStyleNames='{style.formPanel}'>
					<g:HTMLPanel addStyleNames='{style.full}'>
						<table class='{style.full}'>
						
						</table>
					</g:HTMLPanel>
				</g:DecoratorPanel>
			</g:ScrollPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 